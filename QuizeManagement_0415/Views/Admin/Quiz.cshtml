
@model QuizeManagement.Models.ViewModel.QuizzesModel

@{ ViewBag.Title = "AdminDashboard";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="card mx-auto mt-5" style="width:60%">

    <div class="card-header bg-gradient-primary"><h3 class="text-white">Create Quiz</h3></div>

    <div class="card-body">

        <form method="post">

            <div class="row mb-3">

                <div class="col-lg-12">

                    @Html.LabelFor(m => m.Title)

                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })

                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="row mb-3">

                <div class="col-lg-12">

                    @Html.LabelFor(m => m.Description)

                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })

                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="row mb-3">

                <div class="col-lg-12">

                    <input type="hidden" value="@ViewBag.CreatedByValue" />

                </div>

            </div>

            <input type="submit" name="submit" class="btn btn-outline-success" />

            @Html.ActionLink("Back to HomePage", "Admin", new { Controller = "Admin" }, new { @class = "btn btn-outline-warning" })

        </form>

    </div>

</div>
