@model List<QuizeManagement.Models.ViewModel.QuizzesModel>


@{ ViewBag.Title = "AdminDashboard";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-end">
        @Html.ActionLink("Create New Quiz", "Quiz", "Admin", htmlAttributes: new { @class = "btn btn-primary" })
    </div>

    @if (Model != null)

    {

<table class="table table-striped table-bordered table-hover mt-5 ">

    <thead>

        <tr>

            <th>Title</th>

            <th>Description</th>

            <th>Action</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)

        {

            <tr>


                <td>@item.Title</td>

                <td>@item.Description</td>

                <td>

                     @Html.ActionLink("Create Question", "CreateQuestion", "Admin",new{id=@item.Quiz_id,description = @item.Description, title = @item.Title},htmlAttributes: new { @class = "btn btn-primary" })

                    @*<a href="CreateQuestion?id=@item.Quiz_id &description= @item.Description&title=@item.Title" class="btn btn-outline-success" data-id="@item.Quiz_id">Add Question</a>*@

                    <a href="@item.Quiz_id" class="btn btn-outline-warning">Edit</a>

                    <a href="@item.Quiz_id" class="btn btn-outline-danger">Delete</a>

                </td>

            </tr>
}

    </tbody>

</table>}

</div>