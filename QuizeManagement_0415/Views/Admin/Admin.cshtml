@model List<QuizeManagement.Models.ViewModel.QuizzesModel>


@{ ViewBag.Title = "AdminDashboard";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml"; }

<div class="container mt-5">
    <div class="d-flex justify-content-end">
        @Html.ActionLink("Create New Quiz", "Quiz", "Admin", htmlAttributes: new { @class = "btn btn-primary" })
    </div>

    @if (Model != null)

    {

<table class="table table-striped table-bordered table-hover mt-5 ">

    <thead>

        <tr>

            <th>Title</th>

            <th>Description</th>

            <th>Action</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)

        {

<tr>


    <td>@item.Title</td>

    <td>@item.Description</td>

    <td>

        @Html.ActionLink("Create Question", "CreateQuestion", "Admin", new { id = @item.Quiz_id, description = @item.Description, title = @item.Title }, htmlAttributes: new { @class = "btn btn-outline-primary" })

        @Html.ActionLink("Edit", "Edit", "Admin", new { id = @item.Quiz_id, description = @item.Description, title = @item.Title }, htmlAttributes: new { @class = "btn btn-outline-primary" })

        @Html.ActionLink("Delete", "DeleteQuiz", "Admin", new { QuizId = @item.Quiz_id }, htmlAttributes: new { @class = "btn btn-outline-danger" })

        @Html.ActionLink("update Question", "UpdateQuestion", "Admin", new { id = @item.Quiz_id }, htmlAttributes: new { @class = "btn btn-outline-primary" })
    </td>

</tr>
           }

    </tbody>

</table>}

</div>